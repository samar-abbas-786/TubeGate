generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  role     Role   @default(user)
  post     Post[]
}

model Post {
  id      Int    @id @default(autoincrement())
  content String
  userID  User   @relation(fields: [user_id], references: [id])
  user_id Int
}

enum Role {
  user
  admin
}
