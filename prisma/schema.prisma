generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(uuid())
  name           String
  email          String    @unique
  password       String
  role           Role      @default(user)
  content        Content[]
  sentShares     Share[]   @relation("UserShares")
  receivedShares Share[]   @relation("EditorShares")
}

enum Role {
  user
  editor
  admin
}

model Content {
  id            String  @id @default(uuid())
  title         String
  description   String
  privacyStatus String
  file          String
  user          User?   @relation(fields: [userId], references: [id])
  userId        String?
  shares        Share[]
}

model Share {
  user    User   @relation("UserShares", fields: [user_id], references: [id])
  user_id String

  editor    User   @relation("EditorShares", fields: [editor_id], references: [id])
  editor_id String

  content    Content @relation(fields: [content_id], references: [id])
  content_id String

  createdAt DateTime @default(now())

  @@id([user_id, editor_id, content_id])
}
